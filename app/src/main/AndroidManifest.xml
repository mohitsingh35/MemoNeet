<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:roundIcon="@drawable/icon"
        android:supportsRtl="true"
        android:theme="@style/Theme.MemoNeet"
        tools:targetApi="31">
        <activity
            android:name=".Screens.Splash.SplashActivity"
            android:exported="true"
            android:label="MemoNeet"
            android:theme="@style/Theme.MemoNeet" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>
        <activity
            android:name=".Screens.Capsule.CapsuleActivity"
            android:exported="false"
            android:label="@string/title_activity_capsule"
            android:theme="@style/Theme.MemoNeet"></activity>
        <activity
            android:name=".Screens.Main.MainActivity"
            android:exported="false"
            android:label="@string/app_name"
            android:theme="@style/Theme.MemoNeet">

        </activity>
    </application>

</manifest>